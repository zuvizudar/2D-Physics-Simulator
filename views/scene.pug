extends layout

block content
    h1= title


block content 
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')

    script(src="/javascripts/matter.min.js")
    script(src="https://code.jquery.com/jquery-3.4.1.min.js")
    script(src='/dist/js/bootstrap-colorpicker.js')
    script(src='/javascripts/jquery.minicolors.js')
    link(rel='stylesheet' href='/css/jquery-minicolors.css')
    sceneInfo#Info(
        data-scene=scene,
        data-objects=objects
)

    .container.mb-5.pb-5
        .row
            .col-md-8 
                h1.my-4
                    if(scene.sceneName)
                        |#{scene.sceneName} 
                    else 
                        |NAMELESS 
        .row
            .col-md-8
                div(id="canvas")
                script(src="/javascripts/lib.js")
                script(src="/javascripts/init.js")
                script(src="/javascripts/view_scene.js")

            h3.my-3 Control
                .col-md-4.my-4
                    button.btn.btn-outline-info(id="start") 開始
                .card(style='width: 20rem;').h-75
                    .card-body
                        h3.card-title Infomation
                        h5.card-text Description 
                        .pl-3.small #{scene.description}
                    h5.ul.list-group.list-group-flush
                        li.list-group-item 作成者 
                            if(scene.createdBy)
                                .pl-4|#{scene.createdBy}
                            else 
                                .pl-4|Unknown
                        li.list-group-item 作成日時:
                            .pl-4|#{updatedAt}
        .row 
            .col-md-8 
            .col-md-4 
                h3 Share 
        .row 
            .col-md-8 
            .col-md-4 
                .social
                    a.link.twitter(href=`https://twitter.com/share?url=http://localhost:8000/scenes/${scene.sceneId}&text=hey %23aaa%0abbbb %0a` target="_blank")
                        span.fa.fa-twitter
                    a.link.facebook(href='https://www.facebook.com/share.php?u=http://localhost:8000' rel="nofollow" target='_blank')
                        span.fa.fa-facebook-square
