extends layout

block content 
    script(src="javascripts/matter.min.js")
    script(src="https://code.jquery.com/jquery-3.4.1.min.js")
    script(src="javascripts/click-test.js")
    .container
        
        h1.my-4
            | Your Scene 
            small #12345
  
        .row
            .col-md-8
                div(id="canvas")
                script(src="javascripts/matter-test.js")
            .col-md-4
                .card
                    article.card-body
                        form(onsubmit="addForm();return false;")
                            .form-group
                                label Object Type 
                                select#selectForm.form-control
                                    option Circle 
                                    option Rec 
                                    option 3 
                                    option 4 
                                    option 5
                            .form-group
                                label Size 
                                input#rangeForm.form-control-range(type='range')
                            .form-check
                                input#checkForm.form-check-input(type='checkbox')
                                label.form-check-label(for='exampleCheck1') Static 
                            button.btn.btn-primary(type='submit') Add

            h3.my-3 Control
                .col-md
                    button.btn.btn-outline-primary(id="addRec") 箱追加
                    button.btn.btn-outline-danger
                        a(href='/making') リセット
                                      
                    button.btn.btn-outline-success(id="save") 保存
                    button.btn.btn-outline-info(id="start") 開始
        h3.my-4 Other Scene
        .row
            .col-md-3.col-sm-6.mb-4
                a(href='#')
                    img.img-fluid(src='img/scene-example.png', alt='')